<% if @student.errors.any? %>
    <ul>
        <% @student.errors.full_messages.each do |message| %>
            <li>
                <%= message %>
            </li>
        <% end %>
    </ul>
<% end %>

<div class="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="header">Edit</h3>
                <div class="row">
                    <%= render 'students/form' %>
                </div>
            </div>
        </div>
    </div>
</div>