<%= form_for(@student, html: {class: "col s12"}) do |f| %>
    <div class="row">
        <div class="input-field col s12">
            <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>    
            <%= f.label :name %>
        </div> 
    </div>   
    <div class="row">
        <div class="input-field col s12 active">
            <%= f.email_field :email, placeholder: "Enter your email address" %>
            <%= f.label :email, class: 'active' %>
        </div>   
    </div>
    <div class="row">
        <div class="input-field col s12">   
            <%= f.submit "Save", class: "btn teal darken-1 waves-effect waves-light right" %>
        </div>
    </div>
<% end %>