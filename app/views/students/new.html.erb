<% if @student.errors.any? %>
    <div class="container">
        <div class="row sign-up-form">
            <div class="col s12 m12 l12">
                <div class="card-panel red lighten-2">
                    <span class="white-text">
                        <strong><%= pluralize(@student.errors.count, "error") %></strong>
                        prohibited your profile from being created
                        <ul>
                            <% @student.errors.full_messages.each do |message| %>
                                <li>
                                    <%= message %>
                                </li>
                            <% end %>
                        </ul>
                    </span>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class="container">
    <div class="row center sign-up-form">
        <div class="col s12 m12 l12">
            <div class="card-panel">
                <h3 class="header">Sign_up!</h3>
                <div class="row">
                    <%= render 'students/form' %>
                </div>
            </div>
        </div>
    </div>
</div>
